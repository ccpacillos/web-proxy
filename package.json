{
  "name": "graphql-server",
  "version": "0.0.1",
  "description": "GraphQL server template in typescript.",
  "scripts": {
    "lint": "eslint --ext .ts,.tsx src/** && tsc --noEmit --skipLibCheck",
    "copy-gql-types": "cp -r ./graphql/ ./build/graphql",
    "build-clean": "rimraf ./build && tsc --skipLibCheck --project tsconfig.build.json",
    "resolve-paths": "tscpaths -p tsconfig.build.json -s ./src -o ./build/src",
    "build": "npm run build-clean && npm run resolve-paths && npm run copy-gql-types",
    "test": "ava",
    "start": "env $(cat .env) ts-node --files --transpile-only -r tsconfig-paths/register src/index",
    "docker": "docker-compose -f docker-compose.local.yml up -d",
    "drop-db": "mysql -h 0.0.0.0 -u root --password=password -e 'DROP SCHEMA IF EXISTS Mock'",
    "create-db": "mysql -h 0.0.0.0 -u root --password=password -e 'CREATE SCHEMA IF NOT EXISTS Mock'",
    "reset-db": "npm run drop-db && npm run create-db",
    "migrations": "ts-node --files --transpile-only -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:run",
    "schema": "npm run reset-db && npm run migrations"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ccpacillos/graphql-server.git"
  },
  "keywords": [
    "graphql",
    "api",
    "typescript"
  ],
  "author": "ccpacillos",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ccpacillos/graphql-server/issues"
  },
  "homepage": "https://github.com/ccpacillos/graphql-server#readme",
  "devDependencies": {
    "@types/express": "^4.17.1",
    "@types/http-proxy-middleware": "^0.19.3",
    "@types/node": "^12.7.11",
    "@typescript-eslint/eslint-plugin": "^2.3.1",
    "@typescript-eslint/parser": "^2.3.1",
    "eslint": "^6.4.0",
    "eslint-config-prettier": "^6.3.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-prettier": "^3.1.1",
    "husky": "^3.0.7",
    "prettier": "^1.18.2",
    "pretty-quick": "^1.11.1",
    "rimraf": "^3.0.0",
    "ts-node": "^8.4.1",
    "tsconfig-paths": "^3.9.0",
    "tscpaths": "0.0.9",
    "typescript": "^3.6.3"
  },
  "dependencies": {
    "express": "^4.17.1",
    "http-proxy-middleware": "^0.20.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged && npm run lint"
    }
  },
  "ava": {
    "concurrency": 10,
    "failFast": true,
    "powerAssert": true,
    "verbose": true,
    "files": [
      "test/**/*.test.ts"
    ],
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register/transpile-only",
      "tsconfig-paths/register"
    ]
  }
}
